{
	"manifest_version": 2,
	
	"name": "What You're Playing",
	"description": "再生中の曲とかトゥートするやつ",
	"version": "3.0",
	"version_name": "v3.0",
	"homepage_url": "https://genbuhase.github.io/",
	
	"icons": {
		"48": "icon48.png"
	},
	
	"permissions": [
		"tabs",
		"storage"
	],
	
	"content_scripts": [
		{
			"matches": [ "https://www.youtube.com/*", "http://www.nicovideo.jp/*", "https://twitcasting.tv/*" ],
			"js": [ "app.js" ]
		}
	],

	"browser_action": {
		"default_title": "What You're Playing",
		"default_popup": "view/index.html"
	},

	"options_page": "view/index.html"
}